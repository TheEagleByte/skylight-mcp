# Skylight MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Your Skylight API token
# Obtain by capturing traffic from the Skylight app (see docs/auth.md in skylight-api repo)
SKYLIGHT_TOKEN=your_token_here

# Required: Your Skylight frame (household) ID
# Found in API requests like /api/frames/{frameId}/chores
SKYLIGHT_FRAME_ID=your_frame_id_here

# Optional: Authentication type (bearer or basic)
# Default: bearer
SKYLIGHT_AUTH_TYPE=bearer

# Optional: Default timezone for date operations
# Default: America/New_York
SKYLIGHT_TIMEZONE=America/New_York
